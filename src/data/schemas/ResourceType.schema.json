{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ResourceType.json",
  "title": "ResourceType",
  "description": "ResourceType asset type",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Name": {
      "type": [
        "string",
        "null"
      ],
      "hytale": {
        "type": "string",
        "inheritsProperty": true
      }
    },
    "Description": {
      "type": [
        "string",
        "null"
      ],
      "hytale": {
        "type": "string",
        "inheritsProperty": true
      }
    },
    "Icon": {
      "type": [
        "string",
        "null"
      ],
      "hytale": {
        "type": "string",
        "inheritsProperty": true
      },
      "hytaleCommonAsset": {
        "requiredRoots": [
          "Icons/ResourceTypes/"
        ],
        "requiredExtension": "png",
        "isUIAsset": false
      }
    }
  }
}