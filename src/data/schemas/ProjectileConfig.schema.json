      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string",
            "title": "Reference to RootInteraction"
          },
          {
            "$ref": "RootInteraction.json#"
          }
        ]
      },
      "propertyNames": {
        "enum": [
          "Primary",
          "Secondary",
          "Ability1",
          "Ability2",
          "Ability3",
          "Use",
          "Pick",
          "Pickup",
