{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "AttitudeGroup.json",
  "title": "AttitudeGroup",
  "description": "Defines attitudes towards specific groups of NPCs.",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Groups": {
      "type": [
        "object",
        "null"
      ],
      "title": "Map of Attitude",
      "description": "A map of attitudes to NPC groups.",
      "properties": {
        "Ignore": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Hostile": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Neutral": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Friendly": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Revered": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "propertyNames": {
        "enum": [
          "Ignore",
          "Hostile",
          "Neutral",
          "Friendly",
          "Revered"
        ]
      }
    }
  }
}