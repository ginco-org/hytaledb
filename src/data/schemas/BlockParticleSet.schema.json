{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "BlockParticleSet.json",
  "title": "BlockParticleSet",
  "description": "Particle Systems that can be spawned in relation to block events.",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Color": {
      "description": "The colour used if none was specified in the particle settings.",
      "markdownDescription": "The colour used if none was specified in the particle settings.",
      "anyOf": [
        {
          "title": "Color RGB",
          "anyOf": [
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^\\s*#([0-9a-fA-F]{3}){1,2}\\s*$"
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^\\s*rgb\\((\\s*[0-9]{1,3}\\s*,){2}\\s*[0-9]{1,3}\\s*\\)\\s*$"
            }
          ],
          "hytale": {
            "type": "Color",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "Scale": {
      "description": "The scale of the particle system.",
      "markdownDescription": "The scale of the particle system.",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "default": 1
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "PositionOffset": {
      "description": "The position offset from the spawn position.",
      "markdownDescription": "The position offset from the spawn position.",
      "anyOf": [
        {
          "$ref": "common.json#/definitions/Vector3f",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "RotationOffset": {
      "description": "The rotation offset from the spawn rotation.",
      "markdownDescription": "The rotation offset from the spawn rotation.",
      "anyOf": [
        {
          "$ref": "common.json#/definitions/Direction",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "Particles": {
      "type": "object",
      "title": "Map of BlockParticleEvent",
      "hytale": {
        "type": "EnumMap",
        "inheritsProperty": true,
        "uiCollapsedByDefault": false
      },
      "properties": {
        "Walk": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "Run": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "Sprint": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "SoftLand": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "HardLand": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "MoveOut": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "Hit": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "Break": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "Build": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        },
        "Physics": {
          "type": "string",
          "hytaleAssetRef": "ParticleSystem",
          "hytale": {
            "type": "string"
          }
        }
      },
      "additionalProperties": {
        "type": "string",
        "hytaleAssetRef": "ParticleSystem",
        "hytale": {
          "type": "string"
        }
      },
      "propertyNames": {
        "hytale": {
          "type": "string"
        },
        "enum": [
          "Walk",
          "Run",
          "Sprint",
          "SoftLand",
          "HardLand",
          "MoveOut",
          "Hit",
          "Break",
          "Build",
          "Physics"
        ]
      }
    }
  }
}