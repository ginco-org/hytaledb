{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "AmbienceFX.json",
  "title": "AmbienceFX",
  "description": "AmbienceFX asset type",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Conditions": {
      "anyOf": [
        {
          "$ref": "common.json#/definitions/AmbienceFXConditions",
          "hytale": {
            "inheritsProperty": true,
            "uiSectionStart": "Conditions",
            "uiCollapsedByDefault": false
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "Sounds": {
      "type": [
        "array",
        "null"
      ],
      "hytale": {
        "type": "array",
        "inheritsProperty": true,
        "uiSectionStart": "Audio"
      },
      "items": {
        "$ref": "common.json#/definitions/AmbienceFXSound"
      }
    },
    "Music": {
      "anyOf": [
        {
          "$ref": "common.json#/definitions/AmbienceFXMusic",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "AmbientBed": {
      "anyOf": [
        {
          "$ref": "common.json#/definitions/AmbienceFXAmbientBed",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "SoundEffect": {
      "anyOf": [
        {
          "$ref": "common.json#/definitions/AmbienceFXSoundEffect",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "Priority": {
      "type": "integer",
      "description": "Priority for this AmbienceFX. Only applies to music and sound effect. Higher number means higher priority.",
      "markdownDescription": "Priority for this AmbienceFX. Only applies to music and sound effect. Higher number means higher priority.",
      "hytale": {
        "type": "integer",
        "inheritsProperty": true
      },
      "minimum": 0,
      "default": 0
    },
    "BlockedAmbienceFxIds": {
      "type": [
        "array",
        "null"
      ],
      "hytale": {
        "type": "array",
        "inheritsProperty": true
      },
      "items": {
        "type": "string",
        "hytaleAssetRef": "AmbienceFX",
        "hytale": {
          "type": "string"
        }
      }
    },
    "AudioCategory": {
      "type": [
        "string",
        "null"
      ],
      "description": "Audio category to assign this ambienceFX to for additional property routing. Only affects ambient bed and music, not emitters.",
      "markdownDescription": "Audio category to assign this ambienceFX to for additional property routing. Only affects ambient bed and music, not emitters.",
      "hytaleAssetRef": "AudioCategory",
      "hytale": {
        "type": "string",
        "inheritsProperty": true
      }
    }
  }
}