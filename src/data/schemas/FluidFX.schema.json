{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "FluidFX.json",
  "title": "FluidFX",
  "description": "FluidFX asset type",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Fog": {
      "type": "string",
      "title": "FluidFog",
      "enumDescriptions": [
        "",
        "",
        ""
      ],
      "markdownEnumDescriptions": [
        "",
        "",
        ""
      ],
      "hytale": {
        "type": "Enum",
        "inheritsProperty": true
      },
      "enum": [
        "Color",
        "ColorLight",
        "EnvironmentTint"
      ],
      "default": "Color"
    },
    "FogColor": {
      "anyOf": [
        {
          "title": "Color RGB",
          "anyOf": [
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^\\s*#([0-9a-fA-F]{3}){1,2}\\s*$"
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^\\s*rgb\\((\\s*[0-9]{1,3}\\s*,){2}\\s*[0-9]{1,3}\\s*\\)\\s*$"
            }
          ],
          "hytale": {
            "type": "Color",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "FogDistance": {
      "type": [
        "array",
        "null"
      ],
      "hytale": {
        "type": "array",
        "inheritsProperty": true
      },
      "items": {
        "type": "number",
        "hytale": {
          "type": "number"
        }
      },
      "minItems": 2,
      "maxItems": 2
    },
    "FogDepthStart": {
      "type": "number",
      "hytale": {
        "type": "number",
        "inheritsProperty": true
      },
      "default": 40
    },
    "FogDepthFalloff": {
      "type": "number",
      "hytale": {
        "type": "number",
        "inheritsProperty": true
      },
      "default": 10
    },
    "ColorsSaturation": {
      "type": "number",
      "hytale": {
        "type": "number",
        "inheritsProperty": true
      },
      "default": 1
    },
    "ColorsFilter": {
      "type": [
        "array",
        "null"
      ],
      "hytale": {
        "type": "array",
        "inheritsProperty": true
      },
      "items": {
        "type": "number",
        "hytale": {
          "type": "number"
        }
      },
      "minItems": 3,
      "maxItems": 3
    },
    "DistortionAmplitude": {
      "type": "number",
      "hytale": {
        "type": "number",
        "inheritsProperty": true
      },
      "default": 8
    },
    "DistortionFrequency": {
      "type": "number",
      "hytale": {
        "type": "number",
        "inheritsProperty": true
      },
      "default": 4
    },
    "Particle": {
      "anyOf": [
        {
          "$ref": "common.json#/definitions/FluidParticle",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "MovementSettings": {
      "anyOf": [
        {
          "$ref": "common.json#/definitions/FluidFXMovementSettings",
          "hytale": {
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    }
  }
}