{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ParticleSystem.json",
  "title": "ParticleSystem",
  "description": "ParticleSystem asset type",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Spawners": {
      "type": "array",
      "hytale": {
        "type": "array",
        "inheritsProperty": true,
        "uiCollapsedByDefault": false
      },
      "items": {
        "$ref": "common.json#/definitions/ParticleSpawnerGroup"
      },
      "minItems": 1
    },
    "LifeSpan": {
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "CullDistance": {
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "BoundingRadius": {
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "IsImportant": {
      "type": "boolean",
      "hytale": {
        "type": "boolean",
        "inheritsProperty": true
      },
      "default": false
    }
  }
}