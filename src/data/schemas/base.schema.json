{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hytaledb.ginco.gg/schemas/base.schema.json",
  "title": "Base Asset",
  "description": "Common fields shared by all Hytale asset types",
  "type": "object",
  "properties": {
    "Parent": {
      "type": "string",
      "description": "Parent asset to inherit from"
    },
    "Tags": {
      "type": "object",
      "description": "Key-value tag mappings",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "$defs": {
    "NumberOrSpecial": {
      "title": "Number or Special Value",
      "description": "A number that can also be Infinity or NaN",
      "oneOf": [
        { "type": "number" },
        { "type": "string", "pattern": "^(-?Infinity|NaN)$" }
      ]
    },
    "NullableNumberOrSpecial": {
      "title": "Nullable Number or Special Value",
      "description": "A number that can be Infinity, NaN, or null",
      "oneOf": [
        { "type": "number" },
        { "type": "string", "pattern": "^(-?Infinity|NaN)$" },
        { "type": "null" }
      ]
    },
    "ColorRGB": {
      "title": "Color RGB",
      "description": "A color in hex (#RGB or #RRGGBB) or rgb() format",
      "type": "string",
      "anyOf": [
        { "pattern": "^\\s*#([0-9a-fA-F]{3}){1,2}\\s*$" },
        { "pattern": "^\\s*rgb\\((\\s*[0-9]{1,3}\\s*,){2}\\s*[0-9]{1,3}\\s*\\)\\s*$" }
      ]
    }
  }
}
