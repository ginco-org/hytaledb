{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "SoundSet.json",
  "title": "SoundSet",
  "description": "SoundSet asset type",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "SoundEvents": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "Category": {
      "type": "string",
      "title": "SoundCategory",
      "enum": [
        "Music",
        "Ambient",
        "SFX",
        "UI"
      ],
      "default": "SFX"
    }
  }
}