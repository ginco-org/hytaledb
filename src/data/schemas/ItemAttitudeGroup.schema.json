{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ItemAttitudeGroup.json",
  "title": "ItemAttitudeGroup",
  "description": "Defines attitudes towards specific items by tag.",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Attitudes": {
      "type": [
        "object",
        "null"
      ],
      "title": "Map of Sentiment",
      "description": "A map of attitudes to item tags.",
      "properties": {
        "Ignore": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Dislike": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Neutral": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Like": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Love": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "propertyNames": {
        "enum": [
          "Ignore",
          "Dislike",
          "Neutral",
          "Like",
          "Love"
        ]
      }
    }
  }
}