{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "SoundEvent.json",
  "title": "SoundEvent",
  "description": "SoundEvent asset type",
  "type": "object",
  "allOf": [
    {
      "$ref": "base.schema.json"
    }
  ],
  "properties": {
    "Volume": {
      "description": "Volume adjustment of the sound event in decibels.",
      "markdownDescription": "Volume adjustment of the sound event in decibels.",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "minimum": -100,
              "maximum": 10,
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true,
            "uiEditorComponent": {
              "component": "Number",
              "suffix": " dB"
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "Pitch": {
      "description": "Pitch adjustment of the sound event in semitones.",
      "markdownDescription": "Pitch adjustment of the sound event in semitones.",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "minimum": -12,
              "maximum": 12,
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "MusicDuckingVolume": {
      "description": "Amount to duck music volume when playing in decibels.",
      "markdownDescription": "Amount to duck music volume when playing in decibels.",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "minimum": -100,
              "maximum": 0,
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "AmbientDuckingVolume": {
      "description": "Amount to duck ambient sounds when playing in decibels.",
      "markdownDescription": "Amount to duck ambient sounds when playing in decibels.",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "minimum": -100,
              "maximum": 0,
              "default": 0
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "StartAttenuationDistance": {
      "description": "Distance at which to begin attenuation in blocks.",
      "markdownDescription": "Distance at which to begin attenuation in blocks.",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "default": 2
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "MaxDistance": {
      "description": "Maximum distance at which this sound event can be heard in blocks (i.e. the distance at which it's attenuated to zero).",
      "markdownDescription": "Maximum distance at which this sound event can be heard in blocks (i.e. the distance at which it's attenuated to zero).",
      "anyOf": [
        {
          "anyOf": [
            {
              "type": "number",
              "hytale": {
                "type": "number"
              },
              "default": 16
            },
            {
              "type": "string",
              "hytale": {
                "type": "string"
              },
              "pattern": "^(-?Infinity|NaN)$"
            }
          ],
          "hytale": {
            "type": "Number",
            "inheritsProperty": true
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "MaxInstance": {
      "type": "integer",
      "description": "Max concurrent number of instances of this sound event.",
      "markdownDescription": "Max concurrent number of instances of this sound event.",
      "hytale": {
        "type": "integer",
        "inheritsProperty": true
      },
      "minimum": 1,
      "maximum": 100,
      "default": 50
    },
    "PreventSoundInterruption": {
      "type": "boolean",
      "description": "Whether to prevent interruption of this sound event.",
      "markdownDescription": "Whether to prevent interruption of this sound event.",
      "hytale": {
        "type": "boolean",
        "inheritsProperty": true
      },
      "default": false
    },
    "Layers": {
      "type": "array",
      "description": "The layered sounds that make up this sound event.",
      "markdownDescription": "The layered sounds that make up this sound event.",
      "hytale": {
        "type": "array",
        "inheritsProperty": true
      },
      "items": {
        "$ref": "common.json#/definitions/SoundEventLayer"
      },
      "minItems": 1
    },
    "AudioCategory": {
      "type": [
        "string",
        "null"
      ],
      "description": "Audio category to assign this sound event to for additional property routing.",
      "markdownDescription": "Audio category to assign this sound event to for additional property routing.",
      "hytaleAssetRef": "AudioCategory",
      "hytale": {
        "type": "string",
        "inheritsProperty": true
      }
    }
  }
}